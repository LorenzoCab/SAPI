<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesAlumnoActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_tituloproyecto_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título: Sistema Administrador de Proyectos Integradores"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_inst_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Institución: Instituto Tecnológico de CIudad Madero" />

                <TextView
                    android:id="@+id/tv_coord_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordinador: M.C Martha Chuey" />

                <TextView
                    android:id="@+id/tv_colab_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Colaborador(es): Profra. Rosa Delia Retiz Rivera" />

                <TextView
                    android:id="@+id/tv_cliente_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departamentos:"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dep_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      Sistemas Computacionales: ISIC-2010-224" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Asignaturas:"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_asign_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      Nombre: Gestión de Proyectos de Software" />

                <TextView
                    android:id="@+id/tv_sem_al"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      Semestre: 8" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    app:contentPaddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Competencias a desarrollar:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_compdes_al"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aplica metodologías e instrumentos, para garantizar la gestión adecuada de un proyecto de software." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="99dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Competencias previas:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_compprev_al"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Desarrolla soluciones de software, considerando la metodología y herramientas para la elaboración de un proyecto aplicativo en diferentes escenarios." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView46"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Etapa 1:"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_et1_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cronograma" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="109dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView48"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Etapa 2:"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_et2_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Protocolo" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView50"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Etapa 3"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_et3_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Documentacion" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_areacon_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Area de conocimiento: Dispositivos Moviles" />

                            <TextView
                                android:id="@+id/tv_tipoejec_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tipo de ejecución: Asignatura (estructura genérica)" />

                            <TextView
                                android:id="@+id/tv_tipopr_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tipo de Proyecto: Resolutivo" />
                            <TextView
                                android:id="@+id/tv_mateje_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Materia Eje: Gestión de Proyectos de Software" />

                            <TextView
                                android:id="@+id/tv_impacto_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Impacto: " />

                            <TextView
                                android:id="@+id/tv_justificacion_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="Justificacion: " />

                            <TextView
                                android:id="@+id/tv_limres_al"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Limites y restricciones: Una aplicación móvil con acceso web" />



                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>