<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"

    android:layout_marginBottom="15dp"
    android:clickable="true"
    app:cardCornerRadius="8dp"

    app:cardElevation="8dp"
    app:contentPaddingBottom="12dp"
    app:contentPaddingLeft="12dp"
    app:contentPaddingRight="12dp"
    app:contentPaddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tv_titulo_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="TÃ­tulo: Ejemplo 2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coordinador_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordinador: Ejemplo 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cliente_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: Ejemplo 2" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>